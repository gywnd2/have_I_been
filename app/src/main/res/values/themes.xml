<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Haveibeen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_color</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!-- Customize your theme here. -->
<!--        <item name="android:fitsSystemWindows">true</item>-->
    </style>

    <style name="Theme.Haveibeen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Haveibeen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Haveibeen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_down</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_up</item>
    </style>
    <style name="SlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
</resources>